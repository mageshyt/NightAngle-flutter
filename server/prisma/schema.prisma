generator client {
  provider  = "prisma-client-py"
  interface = "asyncio"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  songs     Songs[]
  playlists Playlist[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([email], name: "email")
}

model Songs {
  id            String     @id @default(uuid())
  song_name     String
  thumbnail_url String
  song_url      String
  artist        String
  hex_color     String
  user          User       @relation(fields: [userId], references: [id])
  userId        String
  playlists     Playlist[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([song_name], name: "song_name")
}

model Playlist {
  id        String   @id @default(uuid())
  name      String
  songs     Songs[]
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId], name: "userId")
  @@index([name], name: "name")
}
